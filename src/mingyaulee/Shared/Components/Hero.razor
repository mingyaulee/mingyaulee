@code {
    [Inject]
    public IJSRuntime JsRuntime { get; set; }

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);
        if (firstRender)
        {
            ((IJSInProcessRuntime)JsRuntime).InvokeVoid("initializeHeroIntersectionOberver");
        }
    }

    void ScrollDown()
    {
        ((IJSInProcessRuntime)JsRuntime).InvokeVoid("window.scrollHero");
    }
}